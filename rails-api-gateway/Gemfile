source 'https://rubygems.org'

ruby '~> 3.4.0'

# Rails framework - downgraded for compatibility
gem 'rails', '~> 7.2.0'

# Database
gem 'sqlite3', '~> 2.5'

# App server
gem 'puma', '>= 5.0'

# JSON API
gem 'jbuilder'

# CORS support
gem 'rack-cors'

# HTTP client for Python AI service
gem 'httparty'

# Environment variables
gem 'dotenv-rails'

# Reduce boot times through caching
# gem 'bootsnap', require: false  # DISABLED - compatibility issue with Ruby 3.4.7


# Encryption
gem 'bcrypt', '~> 3.1.7'

group :development, :test do
  gem 'debug', platforms: %i[ mri windows ], require: 'debug/prelude'
  gem 'brakeman', require: false
  gem 'rubocop-rails-omakase', require: false
end
